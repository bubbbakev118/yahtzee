<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How to Play Yahtzee"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:contentDescription="Help dialog title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Game Rules"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:contentDescription="Game rules section"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Roll five dice up to three times per turn\n2. After each roll, you can hold any dice\n3. Score your dice in one category per turn\n4. Each category can only be used once"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scoring Categories"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:contentDescription="Scoring categories section"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upper Section:\n• Aces: Sum of dice showing 1\n• Twos: Sum of dice showing 2\n• Threes: Sum of dice showing 3\n• Fours: Sum of dice showing 4\n• Fives: Sum of dice showing 5\n• Sixes: Sum of dice showing 6"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lower Section:\n• Three of a Kind: Sum of all dice\n• Four of a Kind: Sum of all dice\n• Full House: 25 points\n• Small Straight: 30 points\n• Large Straight: 40 points\n• Yahtzee: 50 points"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_gravity="end"
        style="@android:style/Widget.Material.Button"
        android:contentDescription="Close help dialog"/>

</LinearLayout>
